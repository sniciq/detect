<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">
<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">
    
    <appender name="consoleAppender" class="org.apache.log4j.ConsoleAppender">
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d %5p [%t] (%c:%L) - %m%n"/>
        </layout>
    </appender>
    
	<appender name="filelogAppender" class="org.apache.log4j.RollingFileAppender">
		<param name="File" value="D:/detect_log/stdout.log" />
		<param name="Append" value="false" />
		<param name="MaxBackupIndex" value="20" />
		<param name="MaxFileSize" value="5MB" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d{HH:mm:ss,SSS} [%t] %p - %m%n" />
		</layout>
	</appender>
    
    <logger name="log4j.logger.java.sql.Statement">
        <level value="DEBUG" />
        <appender-ref ref="consoleAppender"/>
    </logger>
	<logger name="log4j.logger.java.sql.PreparedStatement">
        <level value="DEBUG" />
        <appender-ref ref="consoleAppender"/>
    </logger>
    <logger name="log4j.logger.java.sql.ResultSet">
        <level value="DEBUG" />
        <appender-ref ref="consoleAppender"/>
    </logger>
	
	<root>
		<priority value ="DEBUG" />
		<appender-ref ref="consoleAppender"/>
		<appender-ref ref="filelogAppender"/>
	</root>
    
</log4j:configuration> 